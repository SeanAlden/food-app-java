<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.activity.StockManagementActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarFood"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_green"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Management"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Tombol Entry Stock -->
    <Button
        android:id="@+id/btnEntryStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entry Stock"
        app:layout_constraintTop_toBottomOf="@id/toolbarFood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Tombol Exit Stock -->
    <Button
        android:id="@+id/btnExitStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit Stock"
        app:layout_constraintTop_toBottomOf="@id/btnEntryStock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
