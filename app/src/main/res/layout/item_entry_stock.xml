<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFoodSmallEntry"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:src="@drawable/food"/>

        <LinearLayout
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFoodNameEntry"
                android:text="Food name"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCategoryEntry"
                android:text="Category"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvQtyEntry"
                android:text="Qty +5 → before: 10 after: 15"
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSupplierEntry"
                android:text="Supplier: X — By: admin"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditEntry"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_edit"
                app:iconPadding="8dp"
                app:iconSize="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteEntry"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_delete"
                app:iconPadding="8dp"
                app:iconSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
