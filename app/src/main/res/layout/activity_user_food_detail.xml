<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarCategoryDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_green"
            app:navigationIconTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Detail"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Food Image with Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/ivFoodDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Food Name -->
            <TextView
                android:id="@+id/tvFoodNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Food Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222"/>

            <!-- Price -->
            <TextView
                android:id="@+id/tvFoodPriceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rp 0"
                android:textColor="@color/blue_green"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvFoodDescDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Food Description"
                android:textColor="#444"
                android:textSize="14sp"/>

            <!-- Category -->
            <TextView
                android:id="@+id/tvCategoryNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Category: Drinks"
                android:textColor="#666"
                android:textSize="14sp"/>

            <!-- Exp -->
            <TextView
                android:id="@+id/tvFoodExpDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Exp: -"
                android:textColor="#D32F2F"
                android:textSize="14sp"/>

            <!-- Stock -->
            <TextView
                android:id="@+id/tvFoodStockDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Stock: -"
                android:textSize="14sp"
                android:textColor="#333"/>

            <!-- Quantity Selector -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/bg_quantity_box">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="60dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="#222"/>

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Add to Cart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/blue_green"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
