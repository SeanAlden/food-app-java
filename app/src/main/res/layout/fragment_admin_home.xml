<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    tools:context=".page.fragment.admin.AdminHomeFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarAdminHome"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Admin Home Page"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, username"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.cardview.widget.CardView style="@style/DashboardCard">

                    <LinearLayout style="@style/DashboardCardLayout">

                        <TextView
                            android:id="@+id/tvTotalFoods"
                            style="@style/DashboardCardValue"
                            tools:text="5" />

                        <TextView
                            style="@style/DashboardCardLabel"
                            android:text="Foods" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/DashboardCard">

                    <LinearLayout style="@style/DashboardCardLayout">

                        <TextView
                            android:id="@+id/tvTotalTransactions"
                            style="@style/DashboardCardValue"
                            tools:text="12" />

                        <TextView
                            style="@style/DashboardCardLabel"
                            android:text="Transactions" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/DashboardCard">

                    <LinearLayout style="@style/DashboardCardLayout">

                        <TextView
                            android:id="@+id/tvTotalCustomers"
                            style="@style/DashboardCardValue"
                            tools:text="8" />

                        <TextView
                            style="@style/DashboardCardLabel"
                            android:text="Customers" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Manage"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/button_background_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">


                <ImageButton
                    android:id="@+id/btnFood"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/food_logo"
                    app:layout_constraintEnd_toStartOf="@+id/btnCategory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/btnFood"
                    app:layout_constraintStart_toStartOf="@+id/btnFood"
                    app:layout_constraintTop_toBottomOf="@+id/btnFood" />

                <ImageButton
                    android:id="@+id/btnCategory"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/category_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btnFood" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/btnCategory"
                    app:layout_constraintStart_toStartOf="@+id/btnCategory"
                    app:layout_constraintTop_toBottomOf="@+id/btnCategory" />

                <ImageButton
                    android:id="@+id/btnCustomer"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/customer_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnCategory"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btnCustomer"
                    app:layout_constraintStart_toStartOf="@+id/btnCustomer" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/button_background_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/favorite_logo"
                    app:layout_constraintEnd_toStartOf="@+id/btnStockManagement"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/btnFavorite"
                    app:layout_constraintStart_toStartOf="@+id/btnFavorite"
                    app:layout_constraintTop_toBottomOf="@+id/btnFavorite" />

                <ImageButton
                    android:id="@+id/btnStockManagement"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stock_management"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Management"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnStockManagement" />

                <ImageButton
                    android:id="@+id/btnSupplier"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/supplier_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnStockManagement"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/btnSupplier"
                    app:layout_constraintStart_toStartOf="@+id/btnSupplier"
                    app:layout_constraintTop_toBottomOf="@+id/btnSupplier" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="News"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_news" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>